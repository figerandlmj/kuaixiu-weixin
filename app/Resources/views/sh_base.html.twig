<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>{% block title %}快修微信{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/zmstore/css/kx-basic.css?v=2015093010') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    <div class="kx-container ">
        {% block body %}
        {% endblock %}
      
        <!-- 底部固定导航tab -->
        {% block footer %}
        <div class="bottom-navigation-fixed">
            <ul class="banner_li">
                <a href="{{ path('zm_store_index', {'status': 1}) }}" data-flag="1"><li class="kx-img my-order-default " ></li></a>
                <a href="{{ path('zm_store_employ') }}?status=1&display=1" data-flag="2"><li class="kx-img my-recruit-default" ></li></a>
                <a href="{{ path('zm_store_store') }}" data-flag="3"><li class="kx-img my-img-default" ></li></a>
            </ul>
        </div>
        {% endblock %}
        <!-- 底部导航结束 -->
    </div>
    {% block others %}
    {% endblock %}
    <!-- 遮罩层 -->
    <div class="mask"></div>
    <!-- 遮罩层 end -->
{% block javascripts %}
<script type="text/javascript" src="{{ asset('bundles/zmstore/js/jquery-2.1.4.min.js') }}"></script>
<script>
    var _hmt = _hmt || [];
    (function() {
      var hm = document.createElement("script");
      hm.src = "//hm.baidu.com/hm.js?f393063e51cddbc22a052e082444aa4f";
      var s = document.getElementsByTagName("script")[0];
      s.parentNode.insertBefore(hm, s);
    })();
</script>
<script type="text/javascript">
$(function(){
    //自适应屏幕宽高
    $(".kx-body").css({
        "min-height":$(window).height()
    })
    $(window).resize(function(){
        $(".kx-body").css({
            "min-height":$(window).height()
        })
    });
})
</script>
{% endblock %}
</body>
</html>